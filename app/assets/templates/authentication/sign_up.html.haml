.alert.alert-danger( ng-repeat='error in errors' )
  %span.glyphicon.glyphicon-exclamation-sign
  {{ error }}

%form.form-horizontal(role='form' name='SignUpForm' novalidate)
  .form-group
    %label.col-sm-4.control-label{:for => "inputEmail"} Email
    .col-sm-4
      %input#inputEmail.form-control{"ng-model" => "user.email", :placeholder => "Email", :type => "text", "validation-field-required" => "true", "name" => "email", "validation-email" => "true"}
  .form-group
    %label.col-sm-4.control-label{:for => "firstName"} First Name
    .col-sm-4
      %input#firstName.form-control{"ng-model" => "user.firstName", :placeholder => "First Name", :type => "text", "validation-field-required" => "true", "name" => "firstName"}
  .form-group
    %label.col-sm-4.control-label{:for => "lastName"} Last Name
    .col-sm-4
      %input#lastName.form-control{"ng-model" => "user.lastName", :placeholder => "Last Name", :type => "text", "validation-field-required" => "true", "name" => "lastName"}
  .form-group
    %label.col-sm-4.control-label{:for => "inputPassword"} Password
    .col-sm-4
      %input#inputPassword.form-control{"ng-model" => "user.password", :placeholder => "Password", :type => "password", "name" => "password","validation-field-required" => "true", "validation-min-length" => "8"}
  .form-group
    %label.col-sm-4.control-label{:for => "confirmPassword"} Password Confirmation
    .col-sm-4
      %input#confirmPassword.form-control{"ng-model" => "user.password_confirmation", :placeholder => "Repeat Password", :type => "password", "name" => "confirmPassword", "validation-field-required" => "true", "validation-confirm-password" => "true"}
  .form-group
    .col-sm-offset-4.col-sm-10
      %button.btn.btn-success{"ng-click" => "signUp(SignUpForm)", :type => "submit"} Sign Up
  .form-group
    .col-sm-4.col-sm-offset-4.small
      Have an account?
      %a( ui-sref='sign_in' )
        Login Here