%ul.nav.navbar-nav.navbar-right
  %li( ng-if="!isLoggedIn" )
    %a( ui-sref='sign_in' )
      %i.fa.fa-sign-in
      Log In
  %li( ng-if="!isLoggedIn" )
    %a( ui-sref='sign_up' )
      %i.fa.fa-check-square-o
      Register
  %li.dropdown( dropdown ng-if="isLoggedIn" )
    %a.dropdown-toggle( href dropdown-toggle )
      %img.avatar( ng-src="{{ avatarUrl }}")
      {{ userFullName }}
      %span.caret
    %ul.dropdown-menu
      %li
        %a( ui-sref='profile' href='#/profile' )
          %i.fa.fa-pencil
          Profile
      %li( ng-controller='SignOutCtrl' )
        %a( href='#' ng-click='logOut()' )
          %i.fa.fa-sign-out
          Sign Out