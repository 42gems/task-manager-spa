.project( ng-repeat='project in projects' )
  .title {{ project.title }}
  .description( ng-if='project.description' ) {{ project.description }}
  .description( ng-if='!project.description' ) There is no description
  .footer
    .owner
      %i.fa.fa-user
      {{ project.owner.firstName }}
      {{ project.owner.lastName }}
      %span( ng-hide='project.owner.firstName && project.owner.lastName' ) {{ project.owner.email }}
    .buttons
      .btn.btn-full.pull-left( ng-if='!isManagable(project)' ng-click='gotoDetails(project)' )
        Details
      %div( ng-if='isManagable(project)' )
        .btn.pull-left( ng-click='gotoDetails(project)' )
          Details
        .btn.pull-right( ng-click='deleteProject(project)' )
          Destroy
