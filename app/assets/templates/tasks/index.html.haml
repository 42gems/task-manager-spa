.col-md-3(ng-drop='true' ng-drop-success='updateStatus($data, "todo")')
  .header
    %h1 Todo
  %ul(ng-repeat="task in tasks | filter:{ state: 'todo' }")
    %li(ng-drag='true' ng-drag-data='task' draggable='false' ) {{task.title}}

.col-md-3(ng-drop='true' ng-drop-success='updateStatus($data, "in_progress")')
  .header
    %h1 In Progress
  %ul(ng-repeat="task in tasks | filter:{ state: 'in_progress' }")
    %li(ng-drag='true' ng-drag-data='task' draggable='false' ) {{task.title}}

.col-md-3(ng-drop='true' ng-drop-success='updateStatus($data, "done")')
  .header
    %h1 Done
  %ul(ng-repeat="task in tasks | filter:{ state: 'done' }" )
    %li(ng-drag='true' ng-drag-data='task') {{task.title}}

.col-md-3(ng-drop='true' ng-drop-success='updateStatus($data, "approved")')
