.modal-header
  %h3.modal-title New Task
.modal-body
  %form.form-horizontal( role='form' )
    .form-group
      %label.col-sm-4.control-label( for='inputTitle' ) Title
      .col-sm-4
        %input#inputTitle.form-control( type='text' placeholder='Title of the task' ng-model='task.title' )
    .form-group
      %label.col-sm-4.control-label( for='inputDesc' ) Description
      .col-sm-4
        %input#inputDesc.form-control( type='text' placeholder='Description of the task' ng-model='task.description' ) 
    .form-group
      %label.col-sm-4.control-label( for='projectId' ) Project #
      .col-sm-4
        %input#projectId.form-control( type='text' placeholder='ID of the project' ng-model='task.projectId' )
.modal-footer
  %button.btn.btn-success( ng-click='ok()' ) Save
  %button.btn.btn-warning( ng-click='cancel()' ) Cancel
