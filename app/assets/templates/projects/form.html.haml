.row
  .col-sm-3
  .col-sm-6
    .well
      %form.form-horizontal( role='form' )
        .form-group
          %label.col-sm-3.control-label( for='inputTitle' ) Title
          .col-sm-8
            %input#inputTitle.form-control( type='text' placeholder='Title of the project' ng-model='project.title' )
        .form-group
          %label.col-sm-3.control-label( for='inputDesc' ) Description
          .col-sm-8
            %input#inputDesc.form-control( type='text' placeholder='Description of the project' ng-model='project.description' )
        .form-group( ng-if='currentUser.isOwner' )
          %label.col-sm-3.control-label( for='inputOwner' ) Onwer #
          .col-sm-8
            %input#inputOwner.form-control( type='text' placeholder='ID of the owner' ng-model='project.ownerId' )
        .form-group
          %label.col-sm-3.control-label( for='inputPrivate' ) Private
          .col-sm-8
            %input#inputPrivate( type='checkbox' ng-model='project.private' )
        .form-group
          .col-sm-3
          .col-sm-8
            .btn.btn-success.btn-sm( ng-click='saveProject()' ) Save
            %a( ui-sref='^' )
              .btn.btn-warning.btn-sm Cancel
