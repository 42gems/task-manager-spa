%h2 Projects
%a( ui-sref='projects.new' )
  .btn.btn-success New Project
%div( ui-view='project' )
%div( ng-if='projects' )
  %table.table.table-hover.table-responsive
    %thead
      %tr
        %td Title
        %td Owner #
        %td Actions
        %td Tasks
    %tbody
      %tr( ng-repeat='project in projects' )
        %td {{ project.title }}
        %td {{ project.ownerId }}
        %td
          .btn.btn-info( ui-sref='project({id: {{project.id}} })' ) Details
          .btn.btn-danger( ng-click='deleteProject(project.id)' ) Destroy
        %td
          %a( ui-sref='projects.tasks({projectId: {{project.id}} })' )
            .btn.btn-info Taks
%div( ui-view='tasks' )
