%div( ui-view )
  %div( ng-if='project' )
    %h2 {{ project.title }}
    %table.table.table-responsive
      %thead
        %td Description
        %td Owner #
        %td Tasks
        %td Actions
      %tr
        %td( ng-if='project.description')
          {{ project.description }}
        %td( ng-if='!project.description')
          No description given
        %td {{ project.ownerId }}
        %td
          %a( ui-sref='project.tasks' )
            .btn.btn-primary.btn-sm Edit Tasks
        %td
          %a( ui-sref='project.edit' )
            .btn.btn-success.btn-sm Edit
          .btn.btn-danger.btn-sm( ng-click='delete()' ) Destroy
    %div( ng-if='members' )
      %h4 Members of a project:
      %ul( ng-repeat='member in members')
        %li
          {{ member.email }} -
          %a( ng-click='removeMember(member.id)' ) kick