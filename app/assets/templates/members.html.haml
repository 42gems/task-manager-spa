%div( ng-if='members' )
  %table.table.table-hover.table-responsive
    %thead
      %tr
        %td #
        %td Email
        %td Actions
    %tbody
      %tr( ng-repeat='member in members' )
        %td {{ member.id }}
        %td {{ member.email }}
        %td
          .btn.btn-danger Remove
%div(ng-hide='members')
  %h3(style="text-align: center;") There are no invited users yet