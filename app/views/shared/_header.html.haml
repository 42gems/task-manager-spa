%nav.navbar.navbar-default( role="navigation" )
  .container( ng-controller='NavigationCtrl' )
    .navbar-header
      %button.navbar-toggle( data-target="#collapsable" data-toggle="collapse" type="button" )
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand( href='#' )
    #collapsable.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          %a( ui-sref='board' )
            %i.icon-aktivity
            Board
      %ul.nav.navbar-nav.navbar-left
        %li
          %a( ui-sref='projects' )
            Projects
        %li
          %a( ui-sref='members' )
            Members
        %li( ng-show='pendingInvites > 0' )
          %a( ui-sref='invites' )
            Invites
            %span.badge
              {{ pendingInvites }}
        %li
          %a( ui-sref='timeline' )
            Timeline
            %span.badge.quad( ng-if='projectTimeStats.timeLeft' )
              %span {{ projectTimeStats.estimatedTime | secondsToTime : 'h' }} :
              %span {{ projectTimeStats.timeSpent | secondsToTime : 'h' }} :
              %span {{ projectTimeStats.timeLeft  | secondsToTime : 'h' }}
      %select-project
      %auth_links
